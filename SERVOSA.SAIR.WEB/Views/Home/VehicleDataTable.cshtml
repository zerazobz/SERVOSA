@model SERVOSA.SAIR.WEB.Models.TableColumnViewModel

@{ 
    int qytColumns = Model.Columns.Count;
}

<div class="containerdatatable" style="display:table-cell;">
    <table class="table table-bordered table-hover servosatable" data-tablename="@Model.TableNormalizedName">
        <thead>
            <tr>
                <th colspan="@qytColumns">
                    <div style="display: inline-block;">
                        <p style="display: inline;">@Model.TableName</p>
                        <button data-normalizedtablename="@Model.TableNormalizedName" data-tablename="@Model.TableNormalizedName" class="btn btn-default addNewColumnToVariable" type="button" style="display: inline;"> <span class="glyphicon glyphicon-plus"></span> Agregar Columna</button>
                    </div>
                </th>
            </tr>
            <tr>
                @foreach (var iColumn in Model.Columns)
                {
                    <th>@iColumn.ColumnName</th>
                }
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var iColumn in Model.Columns)
                {
                    <td></td>
                }
            </tr>
        </tbody>
    </table>
</div>