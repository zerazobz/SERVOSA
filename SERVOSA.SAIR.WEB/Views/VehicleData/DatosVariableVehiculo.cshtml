@model SERVOSA.SAIR.SERVICE.Models.VehicleVariableDataServiceModel

@using (Html.BeginForm(MVC.VehicleData.DatosVariableVehiculo(), FormMethod.Post, new { id = "postVariableData" }))
{
    <div>
        @Html.HiddenFor(model => model.ObjectId)
        @Html.HiddenFor(model => model.TableName)
    </div>
    @Html.AntiForgeryToken()
    for (int i = 0; i < Model.ColumnsCollection.Count; i++)
    {
        <div class="row">
            <div class="col-md-6">
                @Html.HiddenFor(model => model.ColumnsCollection[i].ColumnId)
                @Html.HiddenFor(model => model.ColumnsCollection[i].ColumnType)
                @Html.HiddenFor(model => model.ColumnsCollection[i].ColumnName)
                @Html.Label(Model.ColumnsCollection[i].ColumnName)
                @*@Html.LabelFor(model => model.ColumnsCollection[i].ColumnName)*@
            </div>
            <div class="col-md-6">
                @if (Model.ColumnsCollection[i].ColumnType == "datetime")
                {
                    @Html.TextBoxFor(model => model.ColumnsCollection[i].TableValue, "{0:yyyy-MM-dd}", new { type = "date" })
                    @Html.TextBoxFor(model => model.ColumnsCollection[i].ColumnValue, "{0:yyyy-MM-dd}", new { type = "date" })
                }
                //else if (Model.ColumnsCollection[i].ColumnType == "decimal")
                else if (Model.ColumnsCollection[i].ColumnType == "int")
                {
                    @Html.TextBoxFor(model => model.ColumnsCollection[i].TableValue, new { type = "number", step = "any" })
                    @Html.TextBoxFor(model => model.ColumnsCollection[i].ColumnValue, new { type = "currency" })
                }
                else if (Model.ColumnsCollection[i].ColumnType == "nvarchar")
                {
                    @Html.TextBoxFor(model => model.ColumnsCollection[i].TableValue)
                    @Html.TextBoxFor(model => model.ColumnsCollection[i].ColumnValue)
                }
                else
                {
                    @Html.TextBoxFor(model => model.ColumnsCollection[i].TableValue)
                }
            </div>
        </div>
    }
    <input type="submit" name="submitDatosVariables" value="Guardar" />
}