<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/ViewController/DriverSERVOSA.Core.js" type="text/javascript"></script>
    <script src="~/Scripts/ViewController/SERVOSA.Core.js" type="text/javascript"></script>
</head>
<body>
    @foreach (var iConstanColumn in SERVOSA.SAIR.SERVICE.Core.ServosaDriverSingleton.Instance.AllConstantColumns)
    {
        <script>
            DRIVERSERVOSACORE.AddConstantDriverColumn("@iConstanColumn");
        </script>
    }
    @foreach (var iConstanColumn in SERVOSA.SAIR.SERVICE.Core.ServosaSingleton.Instance.AllConstantColumns)
    {
        <script>
            SERVOSACORE.AddConstantVehicleColumn("@iConstanColumn");
        </script>
    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Administrar Operaciones", MVC.Operations.Choose(), new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Operaciones", MVC.Operations.Choose())</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top: 20px;">
        @RenderBody()
        <hr />
        @{ Html.RenderPartial(MVC.Shared.Views._SharedFooter); }
        @*<footer>
            <p>DYPSOL @DateTime.Now.Year Derechos Reservados</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/servosamaincore")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
