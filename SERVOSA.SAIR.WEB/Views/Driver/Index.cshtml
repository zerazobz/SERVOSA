@model SERVOSA.SAIR.SERVICE.Models.OldDriverServiceModel
@{
    ViewBag.Title = "Mantenimiento de Operarios";
}
<style type="text/css">
    .wide {
        width: 900px;
    }
</style>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<link href="~/Scripts/jtable/themes/jqueryui/jtable_jqueryui.css" rel="stylesheet" />
<div class="row" style="display: none;">
    <input type="hidden" name="driverAutoComplete" id="driverAutoComplete" value="" />
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <p class="lead">Mantenimiento de Operadores</p>
        </div>
    </div>

    <div class="row">
        <div class="row-fluid">
            <div class="form-group">
                <label class="control-label col-md-2"> Filtro de Búsqueda:</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.NombreOperario, new { @class = "form-control input-sm", placeholder = "Ingrese un Nombre" })
                </div>

                <button id="btnBuscar" type="button" class="btn text-uppercase btn-sm btn-default "><i class="fa fa-search"></i> Buscar</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="driverTable">
        </div>
    </div>
</div>

<div class="modal fade" id="changeDriverTableNameModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content" data-containerid="#changeDriverTableNameContainer">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Cambiar el Nombre de la Tabla</h4>
            </div>
            <div class="modal-body">
                <p class="lead">Ingrese el nuevo nombre de la tabla</p>
                <div class="row">
                    <div class="col-md-6">
                        <input type="text" class="form-control" name="oldTableName" value="" readonly />
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control" name="newTableName" value="" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" id="changeTableName" class="btn btn-primary">Cambiar</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/jquery-ui-1.9.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.ui.datepicker-es.js" type="text/javascript"></script>
    <script src="~/Scripts/handlebars-latest.js" type="text/javascript"></script>
    <script src="~/Scripts/jtable/jquery.jtable.js" type="text/javascript"></script>
    <script src="~/Scripts/jtable/localization/jquery.jtable.es.js" type="text/javascript"></script>
    <script src="~/Scripts/ViewController/DriverViewController.js" type="text/javascript"></script>
    <script type="text/javascript">
        window.DriverNamespace.SetupJTable(@Json.Encode(User.IsInRole(SAIRApplicationResources.AdminRole)));
    </script>
}
